#!/bin/bash

echo "üîç Running pre-commit checks..."

# Get staged .ts files
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=d | grep "\.ts$" || true)

if [ -n "$STAGED_TS_FILES" ]; then
    # Run Prettier
    echo "üìù Running Prettier..."
    echo "$STAGED_TS_FILES" | xargs pnpm prettier --write || {
        echo "‚ùå Prettier check failed. Please fix the formatting and try committing again."
        exit 1
    }

    # # Run ESLint
    # echo "üîç Running ESLint..."
    # echo "$STAGED_TS_FILES" | xargs pnpm eslint || {
    #     echo "‚ùå ESLint check failed. Please fix the code style issues and try committing again."
    #     exit 1
    # }

    # Run Jest tests for affected files
    echo "üß™ Running tests for changed files..."
    TESTS_TO_RUN=""
    for file in $STAGED_TS_FILES; do
        # Convert source file path to test file path
        TEST_FILE=$(echo $file | sed 's/\.ts$/__tests__\/&.test.ts/')
        if [ -f "$TEST_FILE" ]; then
            TESTS_TO_RUN="$TESTS_TO_RUN $TEST_FILE"
        fi
    done

    if [ -n "$TESTS_TO_RUN" ]; then
        pnpm jest $TESTS_TO_RUN --passWithNoTests || {
            echo "‚ùå Tests failed. Please fix the failing tests and try committing again."
            exit 1
        }
    fi

    # Add back the modified files to staging
    echo "$STAGED_TS_FILES" | xargs git add
fi

echo "‚úÖ All pre-commit checks passed!"
