# pre-commit hook

echo "🔍 Running pre-commit checks..."

# Run ESLint
echo "Running ESLint..."
pnpm run lint || {
    echo "❌ ESLint check failed. Please fix the errors and try committing again."
    exit 1
}

# Run Prettier
echo "Running Prettier..."
pnpm run format || {
    echo "❌ Prettier check failed. Please fix the formatting and try committing again."
    exit 1
}

# Run Tests
echo "Running Tests..."
pnpm run test || {
    echo "❌ Tests failed. Please fix the failing tests and try committing again."
    exit 1
}

echo "✅ All pre-commit checks passed!"
